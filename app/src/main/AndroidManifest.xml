<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="exportkit.xd" >

	<!--Camera Storage permission for image .pick-->
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<application
		android:allowBackup="true"
		android:theme="@style/AppTheme"
		android:requestLegacyExternalStorage="true"
		android:label="@string/app_name"
        android:supportsRtl="true">
		<activity
			android:name=".View.Homepage_activity"
			android:label="NutriScore"
			android:theme="@style/AppTheme" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="exportkit.xd.View.Register.Login_activity"/>
		<activity android:name="exportkit.xd.View.Register.SignUp_activity"/>
		<activity android:name="exportkit.xd.View.CoverPage_activity" />
		<activity android:name="exportkit.xd.View.Profile.Profile_activity"/>
		<activity android:name="exportkit.xd.View.Profile.EditProfile_activity"/>
		<activity android:name="exportkit.xd.View.Search.SearchUser_activity" />
		<activity android:name="exportkit.xd.View.Profile.UserProfile_activity" />
		<activity android:name="exportkit.xd.View.Recipe.AddRecipe_activity" />
		<activity android:name="exportkit.xd.View.Recipe.MacroTracker_activity" />
		<activity android:name="exportkit.xd.View.Search.SearchRecipe_activity" />
		<activity android:name="exportkit.xd.View.Recipe.RecipeDetails_activity" />
		<activity android:name="exportkit.xd.View.Scanner.ScannerActivity" />
		<activity android:name="exportkit.xd.View.Scanner.TrackIngredients_activity" />

        <!-- Image cropper activity -->
		<activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
			android:theme="@style/AppTheme"/>

	</application>

</manifest>
	
	