<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/hiddenLayout"
    >
    <RelativeLayout android:id="@+id/text_input___empty_ek4"
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="24dp"
        >

        <View android:id="@+id/rectangle_33_ek4"
            android:background="@drawable/rectangle_33_ek4_shape"
            android:layout_width="260dp"
            android:layout_height="58dp"
            />

        <EditText android:id="@+id/name"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginLeft="21.65dp"
            android:layout_marginTop="15dp"
            android:layout_width="156dp"
            android:layout_height="38.5dp"
            android:hint="Ingredient Name "
            />

        <View android:id="@+id/rectangle_33_ek4hn"
            android:background="@drawable/rectangle_33_ek4_shape"
            android:layout_width="100dp"
            android:layout_height="58dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            />
        <EditText android:id="@+id/amount"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginLeft="21.65dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="38.5dp"
            android:hint="/Grams "
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:inputType="number"
            />

        <ImageView
            android:id="@+id/image_remove"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:contentDescription="TODO"
            android:src="@drawable/ic_baseline_cancel_24" />

    </RelativeLayout>


</LinearLayout>