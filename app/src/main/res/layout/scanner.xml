<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:text="Cancel"
            android:background="@null"
            android:textColor="#ff0000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton android:id="@+id/done"
            android:src="@drawable/_icon_awesome_check_circle"
            android:contentDescription="_icon_awesome_check_circle"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="24dp"
            android:layout_marginTop="40dp"
            android:layout_width="22.42dp"
            android:layout_height="21.84dp" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/uploadImage"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_addimage"
        app:c_border="true"
        app:c_border_color="@color/colorGray1"
        app:c_border_width="1dp" />

    <Button android:id="@+id/display"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="183dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view"
        android:background="@null"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@null" />
    </RelativeLayout>

</LinearLayout>